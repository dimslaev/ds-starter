{
  "name": "DS",
  "version": "1.0.0",
  "description": "Starter slim version.",
  "main": "index.js",
  "scripts": {
    "build:js": "babel src/js/main.js --out-file assets/js/app.js",
    "watch:js": "babel src/js/main.js --watch --out-file assets/js/app.js",
    "build:css": "node-sass --include-path scss src/scss/main.scss assets/css/main.css",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "build": "concurrently \"npm:build:js\" \"npm:build:css\"",
    "watch": "concurrently \"npm:watch:js\" \"npm:watch:css\""
  },
  "author": "Dimslaev",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-watch": "^2.0.7",
    "concurrently": "^4.1.0",
    "eslint": "^5.9.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.6"
  }
}
